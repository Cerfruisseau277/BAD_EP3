@using MVC_Carshaing_EP3.ViewModel;
@model AddCarViewModel

<h1>New Car</h1>
<hr/>
<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Brand">Brand</label>
        <input asp-for="Brand" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Model">Model</label>
        <input asp-for="Model" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Year">Year</label>
        <input asp-for="Year" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Seats">Seats</label>
        <input asp-for="Seats" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="FuelType">Fuel</label>
        <select asp-for="FuelType" class="form-select">
            <option value="0">Petrol</option>
            <option value="1">Diesel</option>
            <option value="2">CNG</option>
            <option value="3">Electric</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Transmission">Transmission</label>
        <select asp-for="Transmission" class="form-select">
            <option value="0">Automatic</option>
            <option value="1">Manual</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="imgURL">Image URL (Ideal format is 1.5 width & 1 height)</label>
        <input asp-for="imgURL" class="form-control" />
    </div>
    <br />
    <div class="form-group mt-2">
         <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

