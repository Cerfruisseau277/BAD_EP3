@using DAL.Model;
@using DAL.Interface;
@using DAL.Services;
@model List<Car>
@{
    <hr />
    <div class="container">
        <h1 class="text-center">Cars</h1>
        <hr />
        <div class="row">
            @foreach (var car in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card" id="imgCar">
                        <img class="card-img-top" src="@car.ImageURL">
                        <div id="bckCard" class="card-body">
                            <h5 class="card-title" id="title">@car.Brand @car.Model</h5>
                            <p class="card-text">Fuel: @car.FuelType</p>
                            <p class="card-text">Year: @car.Year</p>
                            <a asp-controller="Car" asp-action="Details" asp-route-id="@car.Id" class="btn btn-primary">Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}